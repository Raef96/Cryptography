<Application x:Class="Cryptography.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Cryptography"
             xmlns:viewModel="clr-namespace:Cryptography.ViewModels"
             xmlns:view="clr-namespace:Cryptography.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/MenuButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/ButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/ComboBoxStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Image x:Key="ContentCopy" Source="/Cryptography;component/Static files/content_copy.png"/>

            <DataTemplate DataType="{x:Type viewModel:KeysViewModel}">
                <view:KeysView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:EncryptionViewModel}">
                <view:EncryptionView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:ContentCopyViewModel}">
                <view:ContentCopyView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
